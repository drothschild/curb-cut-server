// Take the array of one marker from the controller and unwrap to get the needed info
var newMarkers = <%= raw @hash.to_json %>;
var m = newMarkers[0];
var marker = filterMarker(m.id);
// open the associated marker and set the contents of its window to the updated info
google.maps.event.trigger(marker.getServiceObject(), 'click'); 
handler.currentInfowindow().setContent(m.infowindow);
console.log()
// Prevent editCurb from changing the window content back to its pre-edit content
google.maps.event.clearListeners(handler.currentInfowindow(),'closeclick');